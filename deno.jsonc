{
    "lock": false,
    "tasks": {
        "build": "deno run -A --unstable src/dev.ts build",
        "check": "deno fmt --check && deno lint && deno check src/**/*.ts && deno check src/**/*.tsx",
        "preview": "deno run -A src/main.ts",
        "start": "deno run -A --unstable --watch=src/static/,src/routes/ src/dev.ts",
        "test": "deno test -A --unstable --parallel",
        "update": "deno run -A -r https://fresh.deno.dev/update ."
    },
    "lint": {
        "rules": {
            "tags": [
                "ban-untagged-todo",
                "default-param-last",
                "eqeqeq",
                "explicit-function-return-type",
                "explicit-module-boundary-types",
                "fresh",
                "no-const-assign",
                "no-external-import",
                "no-sparse-arrays",
                "recommended"
            ]
        },
        "exclude": ["src/_fresh"]
    },
    "fmt": {
        "exclude": ["src/_fresh"],
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": true
    },
    "imports": {
        "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.2.3",
        "@preact/signals": "https://esm.sh/*@preact/signals@1.1.3",
        "@trpc/client": "https://esm.sh/@trpc/client@10.38.2",
        "@trpc/server": "https://esm.sh/@trpc/server@10.38.2",
        "@trpc/server/": "https://esm.sh/@trpc/server@10.38.2/",
        "~/": "./src/",
        "$fresh/": "https://deno.land/x/fresh@1.4.3/",
        "$std/": "https://deno.land/std@0.193.0/",
        "clsx": "https://esm.sh/clsx@2.0.0",
        "fresh_seo": "https://deno.land/x/fresh_seo@1.0.1/mod.ts",
        "kv_oauth": "https://deno.land/x/deno_kv_oauth@v0.6.0/mod.ts",
        "kv_oauth/": "https://deno.land/x/deno_kv_oauth@v0.6.0/",
        "lucide-preact": "https://esm.sh/lucide-preact@0.276.0",
        "preact-render-to-string": "https://esm.sh/*preact-render-to-string@6.2.1",
        "preact": "https://esm.sh/preact@10.15.1",
        "preact/": "https://esm.sh/preact@10.15.1/",
        "superjson": "https://esm.sh/superjson@1.13.1",
        "tailwind-merge": "https://esm.sh/tailwind-merge@1.14.0",
        "twind": "https://esm.sh/twind@0.16.19",
        "twind/": "https://esm.sh/twind@0.16.19/",
        "zod": "https://esm.sh/zod@3.22.2"
    },
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "preact"
    }
}
